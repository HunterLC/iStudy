<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="220dp"
        app:cardCornerRadius="10dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="220dp">
            <TextView
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:id="@+id/course_title"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:textSize="20sp"
                />
            <Button
                android:layout_marginTop="10dp"
                android:id="@+id/course_add"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/course_title"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:background="@drawable/btn_shape"
                android:textColor="@color/deepskyblue"
                android:text="添加"/>
            <ImageView
                android:id="@+id/course_img"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:layout_below="@id/course_title"
                android:layout_width="150dp"
                android:layout_height="150dp" />
            <TextView
                android:id="@+id/course_inf"
                android:singleLine="false"
                android:layout_alignTop="@id/course_img"
                android:layout_toRightOf="@id/course_img"
                android:layout_marginLeft="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                />
            <TextView
                android:id="@+id/course_author"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_toRightOf="@id/course_img"
                android:layout_marginLeft="20dp"
                android:layout_below="@id/course_inf"
                android:layout_marginTop="5dp"
                android:textSize="15sp"
                />
            <TextView
                android:gravity="center"
                android:id="@+id/course_price"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignLeft="@id/course_inf"
                android:layout_alignBottom="@id/course_img"
                android:textSize="20sp"
                android:textColor="@color/red"
                />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>