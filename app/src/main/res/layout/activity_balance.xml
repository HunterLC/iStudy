<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.team9.Activity.InformationManagementActivity"
    android:gravity="center_horizontal"
    android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!--图片-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="500dp"
                    android:background="@drawable/aim_roundrec"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_width="100dp"
                            android:id="@+id/aim_mymonty"
                            android:layout_marginTop="150dp"
                            android:layout_marginLeft="80dp"
                            android:layout_height="100dp"
                            android:src="@drawable/aim_qianbao"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/balance_money"
                            android:textSize="25dp"
                            android:layout_marginLeft="80dp"
                            android:textColor="#FFFFFF"
                            android:text="￥ 200"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">
                        <ImageView
                            android:layout_width="100dp"
                            android:layout_marginTop="150dp"
                            android:id="@+id/aim_recharge"
                            android:layout_height="100dp"
                            android:src="@drawable/aim_chongzhi"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="25dp"
                            android:text="充值"
                            android:textColor="#FFFFFF"
                            android:textSize="25dp"
                            />
                        </LinearLayout>
            </LinearLayout>

        </LinearLayout>
</LinearLayout>